@{
    Layout = null;
}
<form id="paymentForm">
  <label class="mb-3">Pay securely with Helperland payment gateway!</label>

  <div class="row mb-3">
    <div class="col-sm-5">
      <label for="promocode" class="form-label">Promo code(optional)</label>
      <input
        type="text"
        class="form-control"
        id="promocode"
        placeholder="Promo code(optional)"
      />
    </div>
    <div class="col-sm-2 align-self-end">
      <button id="applyBtn" class="btn btn-primary">Apply</button>
    </div>
  </div>
  <hr class="divider-line mb-5" />

  <div class="d-flex align-items-center mb-3" id="card-detail-div">
    <div class="d-flex align-items-center">
      <i class="far fa-credit-card"></i>
      <input
        type="text"
        maxlength="16"
        class="form-control ms-1"
        id="card-number"
        placeholder="Card number"
      />
    </div>

    <div class="d-flex ms-auto">
      <input
        type="text"
        class="form-control"
        id="card-expiry"
        placeholder="MM/YY"
      />
      <input
        type="text"
        maxlength="3"
        class="form-control"
        id="card-cvc"
        placeholder="CVC"
      />
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-auto d-flex flex-column ms-auto">
      <span class="align-self-end">Accepted cards</span>
      <div class="d-flex">
        <img src="~/images/visa.jpg" />
        <img class="ms-1" src="~/images/mastercard.jpg" />
        <img class="ms-1" src="~/images/american_express.jpg" />
      </div>
    </div>
  </div>

  <hr class="divider-line mb-3" />

  <div class="row mb-3">
    <div class="col-12 form-check">
      <input
        class="form-check-input"
        type="checkbox"
        value=""
        id="terms-conditions"
      />
      <label
        class="form-check-label"
        for="terms-conditions"
        style="font-size: 12px"
      >
        I accepted <a href="">terms and conditions</a>, the
        <a href="">cancellation policy</a> and the
        <a href="">privacy policy.</a>I confirm that Helperland starts to<br />
        execute the contract before the expiry of the withdrawal period and i
        lose my right of withdrawal as a consumer with<br />
        full performance of the contract.
      </label>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-auto ms-auto">
      <button
        id="paymentSubmit"
        class="btn btn-primary"
        type="button"
        onClick="submitPaymentInfo();"
      >
        Complete Booking
      </button>
    </div>
  </div>
</form>
@{ 
    var isError=ViewBag.IsError; 
    var resultMessage=ViewBag.ResultMessage;
    var serviceRequestId =ViewBag.ServiceRequestId;
}
<script>
  var isError = "@ViewBag.isError";
  var resultMessage = "@ViewBag.resultMessage";
  var serviceRequestId = "@ViewBag.serviceRequestId";
</script>
